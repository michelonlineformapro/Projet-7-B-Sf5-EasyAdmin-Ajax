{% extends 'base.html.twig' %}

{% block title %}Annonces SF5 CONNEXION{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous Ãªtes connectez en tant que :  {{ app.user.username }}, <a class="btn btn-outline-danger" href="{{ path('app_logout') }}">DECONNEXION</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">CONNEXION</h1>

    <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" placeholder="email@email.com" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>


    <div class="form-group">
        <label for="inputPassword">Mot de passe</label>
        <input type="password" placeholder="motdepasse" name="password" id="inputPassword" class="form-control" required>
    </div>


    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-outline-success mt-3" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
